{
  "compilerOptions": {
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": [
      "ES2017",
      "dom"
    ],
    "skipLibCheck": true
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "**/node_modules"
  ]
}
